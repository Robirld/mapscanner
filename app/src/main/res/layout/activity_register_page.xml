<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jiaoda2"
    android:orientation="vertical"
    tools:context=".RegisterPageActivity">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:paddingBottom="40dp"
        android:paddingTop="20dp"
        android:background="@drawable/border_shape01">

        <Button
            android:id="@+id/back_rig"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape03"
            android:text="返回"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/commit"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape03"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="提交"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="人脸注册"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/user_name"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:hint="请输入用户名"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/birthday"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="出生日期"
            android:layout_below="@+id/user_name"
            android:layout_alignLeft="@+id/user_name"
            android:layout_marginTop="15dp"
            android:inputType="date"/>

        <Button
            android:id="@+id/day_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择日期"
            android:layout_below="@+id/user_name"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/birthday"/>


        <EditText
            android:id="@+id/phone_num"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/birthday"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:hint="请输入手机号码"
            android:inputType="number"/>

        <EditText
            android:id="@+id/e_mail"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:hint="请输入邮箱地址"
            android:inputType="text"/>

        <TextView
            android:id="@+id/choose_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择本人照片："
            android:textSize="18dp"
            android:textColor="#02f"
            android:layout_below="@+id/e_mail"
            android:layout_marginTop="15dp"
            android:layout_alignLeft="@+id/e_mail" />

        <Button
            android:id="@+id/photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择"
            android:layout_toRightOf="@+id/choose_photo"
            android:layout_below="@+id/e_mail"/>

        <ImageView
            android:id="@+id/photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/choose_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:scaleType="fitStart"/>
    </RelativeLayout>

</LinearLayout>